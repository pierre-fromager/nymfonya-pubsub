{
    "name": "pier-infor/nymfonya-pubsub",
    "description": "Nymfonya Pubsub Component",
    "keywords": [
        "Nymfonya",
        "Components",
        "Pubsub"
    ],
    "homepage": "https://github.com/pierre-fromager/nymfonya-pubsub",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Pierre Fromager",
            "email": "info@pier-infor.fr",
            "homepage": "https://github.com/pierre-fromager"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "type": "library",
    "require": {
        "php": ">=7.0.0",
        "pier-infor/nymfonya-config": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "*",
        "friendsofphp/php-cs-fixer": "^2.13",
        "phploc/phploc": "^4.0",
        "phpmd/phpmd": "@stable"
    },
    "autoload": {
        "psr-4": {
            "Nymfonya\\Component\\Pubsub\\": "src/"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Nymfonya\\Component\\Pubsub\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "disable-tls": false,
        "secure-http": true,
        "process-timeout": 0
    },
    "scripts": {
        "checklint": [
            "phpcs -e --standard=PSR2 --warning-severity=10 --extensions=php src/* tests/*"
        ],
        "lint": [
            "phpcbf --standard=PSR2 --warning-severity=10 --extensions=php src/* tests/*"
        ],
        "cq": [
            "phploc -vvv --ansi src/*"
        ],
        "md": [
            "phpmd ./src text codesize,unusedcode,naming"
        ],
        "covdbg": [
            "phpdbg -qrr ./vendor/bin/phpunit --coverage-html='./coverage'"
        ],
        "test": [
            "phpunit --verbose --testsuite all"
        ]
    }
}